{
	"compilerOptions": {
		"incremental": true,
		"target": "es6",
		"module": "commonjs",
		"allowJs": true,
		"outDir": "./build",
		"strict": true,
		"removeComments": true, 
		"moduleResolution": "node",
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"forceConsistentCasingInFileNames": true,
		"strictPropertyInitialization": false
	},
	"include": [
		"src"
	]
}